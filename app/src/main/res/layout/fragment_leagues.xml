<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_17_dp"
        android:textSize="@dimen/size_24_sp"
        android:textColor="@android:color/black"
        android:gravity="center_vertical"
        android:drawablePadding="@dimen/padding_17_dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Country" />

    <TextView
        android:id="@+id/leagueTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_17_dp"
        android:textSize="@dimen/size_24_sp"
        android:textColor="@android:color/black"
        android:gravity="center_vertical"
        android:drawablePadding="@dimen/padding_17_dp"
        app:layout_constraintTop_toBottomOf="@id/country"
        android:text="@string/league_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/leagues"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_17_dp"
        app:layout_constraintTop_toBottomOf="@id/leagueTitle"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>