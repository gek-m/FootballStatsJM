<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/standing_card_height"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/teamRank"
            android:layout_width="@dimen/padding_50_dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_15_dp"
            android:textSize="@dimen/size_14_sp"
            android:textColor="@android:color/black"
            android:gravity="start"
            android:drawablePadding="@dimen/padding_17_dp"
            tools:text="12"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/teamName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_15_dp"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:gravity="start"
            android:drawablePadding="@dimen/padding_17_dp"
            tools:text="Chelsea"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/teamRank"
            app:layout_constraintRight_toLeftOf="@id/gamesAmount"/>

        <TextView
            android:id="@+id/gamesAmount"
            android:layout_width="@dimen/padding_50_dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_15_dp"
            android:textSize="@dimen/size_14_sp"
            android:textColor="@android:color/black"
            android:gravity="end"
            android:drawablePadding="@dimen/padding_17_dp"
            tools:text="12"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/teamName"
            app:layout_constraintRight_toLeftOf="@id/goalsDifferent"/>

        <TextView
            android:id="@+id/goalsDifferent"
            android:layout_width="@dimen/padding_50_dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_15_dp"
            android:textSize="@dimen/size_14_sp"
            android:textColor="@android:color/black"
            android:gravity="end"
            android:drawablePadding="@dimen/padding_17_dp"
            tools:text="0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/gamesAmount"
            app:layout_constraintRight_toLeftOf="@id/teamPoints"/>

        <TextView
            android:id="@+id/teamPoints"
            android:layout_width="@dimen/padding_50_dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_15_dp"
            android:textSize="@dimen/size_14_sp"
            android:textColor="@android:color/black"
            android:gravity="end"
            android:drawablePadding="@dimen/padding_17_dp"
            tools:text="6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/goalsDifferent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
